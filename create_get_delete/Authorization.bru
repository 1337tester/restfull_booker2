meta {
  name: Authorization
  type: http
  seq: 1
}

post {
  url: {{url}}/auth
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  { "username" : "admin", "password" : "password123" }
}

assert {
  res.status: eq 200
}

script:post-response {
  bru.setEnvVar("token", res.body.token);
  
  console.log("This is token: " + bru.getEnvVar("token"));
}
